                {
                    "name": "password_broker",
                    "in": "body",
                    "description": "Password broker",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    },
    "/api/google/redirect": {
        "get": {
            "tags": ["authentications"],
            "responses": {
                "200": {
                    "description": "An endpoint for redirecting to Google login"
                }
            }
        }
    },
    "/api/google/callback": {
        "get": {
